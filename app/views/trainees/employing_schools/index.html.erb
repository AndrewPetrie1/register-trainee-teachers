<%= render PageTitle::View.new(title: "trainees.employing_schools.index",
                               has_errors: @employing_school_form.errors.present?) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= register_form_with(model: @employing_school_form,
                           url: trainee_employing_schools_path(@trainee, query: params[:query]),
                           method: :put,
                           local: true) do |f| %>
      <% render (@schools.empty? ? "no_results" : "results"), f: f %>
    <% end %>
  </div>
</div>

<p class="govuk-body"><%= govuk_link_to(t("cancel"), view_trainee(@trainee)) %></p>
