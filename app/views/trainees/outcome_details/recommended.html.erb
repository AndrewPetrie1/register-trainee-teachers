<%= render PageTitle::View.new(title: "trainees.outcome_details.recommended_#{@trainee.get_award_type.downcase}") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLink.new(text: t(:back_to_record), href: trainee_path(@trainee)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <div class="govuk-panel govuk-panel--confirmation qts-submission-success-panel govuk-!-margin-bottom-6">
      <h1 class="govuk-panel__title">
        <%= trainee_name(@trainee) %> recommended for <%= @trainee.get_award_type %>
      </h1>
    </div>
    <p class="govuk-body">
      The Department for Education will award <%= @trainee.get_award_type %> where appropriate within 3
      working days.
    </p>
  </div>
</div>

<p class="govuk-body govuk-!-margin-bottom-9"><%= govuk_link_to("Check trainee statuses from your list of records", trainees_path) %></p>

<%= render FeedbackLink::View.new(
  enabled: Settings.features.enable_feedback_link,
  feedback_link_url: Settings.feedback_link_url,
) %>
