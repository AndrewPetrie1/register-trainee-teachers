<%= render_component PageTitle::View.new(title: "sign_in.index") %>

<%= content_for(:breadcrumbs) do %>
  <%= render_component GovukComponent::BackLink.new(
    text: 'Back',
    href: root_path
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <h1 class="govuk-heading-l">Sign in to Register trainee teachers</h1>

    <p class="govuk-body-m"> Use DfE Sign-in to access your account.</p>

    <%= govuk_button_to("Sign in using Persona", personas_path) %>

    <p class="govuk-body-m">If you do not have a DfE Sign-in account but need access to Register trainee teachers, email

    <%= govuk_mail_to "becomingateacher@digital.education.gov.uk", 
                      "becomingateacher@digital.education.gov.uk" %>. 
    </p>
    
  </div>
</div>
