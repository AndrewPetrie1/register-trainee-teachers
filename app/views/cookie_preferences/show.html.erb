<%= render PageTitle::View.new(i18n_key: "pages.cookie_policy") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: t("back"),
    href: root_path,
    ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-xl"><%= t('cookies.heading') %></h1>
    <div class="govuk-body"></div>
    <%= t("cookies.cookie_policy.body_html", cookie_name: Settings.cookies.consent.name) %>

    <%= form_with model: @cookie_preferences_form, url: cookie_preferences_path, method: :put do |f| %>
      <%= f.govuk_collection_radio_buttons :consent,
                                           [%w[yes Yes], %w[no No]],
                                           :first,
                                           :last,
                                           legend: { text: t('cookies.consent_form.legend'), size: 's' } %>
      <%= f.govuk_submit t('cookies.consent_form.submit_button') %>
    <% end %>
  </div>
</div>
