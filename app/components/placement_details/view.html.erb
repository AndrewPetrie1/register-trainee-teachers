<%= render MappableSummary::View.new(trainee: trainee, title: summary_title,
                                 rows: [{
      key: "Placements",
      value: placements,
      custom_value: true,
      }],
      system_admin: system_admin,
      has_errors: has_errors,
      ) do |component| %>
  <% component.header_actions do %>
    <% if show_link %>
      <%= govuk_link_to "Manage placements", trainee_path(trainee) %>
    <% end %>
  <% end %>
<% end %>
