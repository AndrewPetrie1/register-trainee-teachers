<div class="user-card govuk-!-margin-bottom-5">
  <div class="user-card__name">
    <h2 class="govuk-heading-s user-card__name__heading">
      <%= user.name %>
    </h2>
    <div class="govuk-caption-m govuk-!-font-size-16 user-card__name__created">
      <%= updated_at %>
    </div>
  </div>

  <div class="govuk-caption-m govuk-!-font-size-16">
    <%= dttp_id %>
  </div>

  <div class="govuk-caption-m govuk-!-font-size-16">
    <%= email_address %>
  </div>

  <% if edit_path.present? %>
    <div class="govuk-caption-m govuk-!-font-size-16">
      <%= govuk_link_to('Edit', edit_path) %>
    </div>
  <% end %>

  <% if delete_path.present? %>
    <div class="govuk-body govuk-!-margin-top-2">
      <%= govuk_button_to("Delete user", delete_path, method: :get, class: "govuk-button--warning") %>
    </div>
  <% end %>

  <% if registration_form_path.present? %>
    <%= govuk_button_to(
      "Register user to provider",
      registration_form_path,
      params: { dttp_user_id: user },
      id: "register-dttp-user",
      class: "govuk-button--secondary",
    ) %>
  <% end %>
</div>
